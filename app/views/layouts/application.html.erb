<!DOCTYPE html>
<html>
  <head>
    <title>AssignmentDevise</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>

    <% if user_signed_in? %>
      <p>You are signed in as <%= "#{current_user.username} (#{current_user.email}). Not you?" %> <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    <% end %>

    <%= yield %>
  </body>
</html>
