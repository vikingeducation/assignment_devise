<!DOCTYPE html>
<html>
  <head>
    <title>AssignmentDevise</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p><%= flash[:error] %></p>
    <p><%= flash[:alert] %></p>
    <% if user_signed_in? %>
      <%= current_user.username %> | <%= link_to "Log out", destroy_user_session_path, method: :delete %>
    <% else %>
      Welcome! Please <%= link_to "sign in", new_user_session_path %> or <%= link_to "sign up", new_user_registration_path %>!
    <% end %>
    <%= yield %>
  </body>
</html>
