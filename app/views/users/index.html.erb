<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user  if is_owner?(user)%></td>
        <td><%= link_to 'Edit', edit_user_path(user) if is_owner?(user)  %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } if is_owner?(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New User', new_user_registration_path unless user_signed_in? %>
<%= link_to 'Sign In', new_user_session_path unless user_signed_in? %>
<%= link_to 'Sign Out', destroy_user_session_path, method: :delete if user_signed_in? %>